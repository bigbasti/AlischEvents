@model AlischEvents.Web.Models.Account.ChangePasswordModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section PageTitle{
    Neues Passwort setzen
}

@section HeadContent{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}


<h3>Bitte geben Sie das neue Passwort ein und wiederholen Sie die Eingabe</h3>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Neues Passwort</legend>

        <div class="editor-field">
            @Html.HiddenFor(model => model.AccountID)
            @Html.ValidationMessageFor(model => model.AccountID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pass1)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Pass1)
            @Html.ValidationMessageFor(model => model.Pass1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pass2)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Pass2)
            @Html.ValidationMessageFor(model => model.Pass2)
        </div>

        <p>
            <input type="submit" value="Neues Passwort speichern" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Abbrechen", "Edit", "Account", new { id = Model.AccountID }, null)
</div>
