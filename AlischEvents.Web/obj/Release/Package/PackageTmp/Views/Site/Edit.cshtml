@model AlischEvents.Web.Models.Site.WebSite

@{
    ViewBag.Title = "Seite bearbeiten";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section HeadContent{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @Html.CKEditorHeaderScripts()
    

}
@section PageTitle{
    Seite bearbeiten
}
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
       
       <div>
            Titel der Seite: @Html.TextBoxFor(m => m.SiteTitle, new { style = "width: 300px;" }) | Beschreibung: @Html.TextBoxFor(m => m.SiteLabel, new { style = "width: 100px;" }) | @Html.CheckBoxFor(m => m.ShowOnMenu) Im Menü? 
            <br />&nbsp;
        </div>
        <div>
            @Html.TextAreaFor(c => c.SiteContent)
        </div>
        <div>
            <input type="submit" value="Änderungen Speichern"  onclick="@Html.CKEditorSubmitButtonUpdateFunction()" />
        </div>

    }
    <script type="text/javascript">

    CKEDITOR.replace('SiteContent',
    {
        filebrowserUploadUrl: '@Url.Action("UploadImage", "Site")/'
    });
    </script>
    <div>
        @Html.ActionLink("Zurück zur Übersicht", "Index")
    </div>
